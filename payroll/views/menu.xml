<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_payroll_tree" model="ir.ui.view">
        <field name="name">payroll.payrollsystem.tree</field>
        <field name="model">payroll.payrollsystem</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type_of_wage"/>
                <field name="currency_id"/>
                <field name="salary"/>
                <field name="hour_rate"/>
                <field name="worked_hours"/>
                <field name="payment_date"/>
            </tree>
        </field>
    </record>
    <record id="view_payroll_form" model="ir.ui.view">
        <field name="name">payroll.payrollsystem.form</field>
        <field name="model">payroll.payrollsystem</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>New Payroll</h1>
                    <group>
                        <group>
                            <field name="type_of_wage"/>
                            <field name="currency_id"/>
                            <field name="salary"/>
                        </group>
                        <group>
                            <field name="hour_rate"/>
                            <field name="worked_hours"/>
                            <field name="payment_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_payroll" model="ir.actions.act_window">
        <field name="name">Payrolls</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payroll.payrollsystem</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Payroll!
            </p>
        </field>
    </record>
    <menuitem
            id="payroll_menu_root"
            name="Payroll"
            action="action_payroll"
            sequence="0"
            web_icon="payroll,static/description/icon.png"
    />
    <menuitem
            id="salary_menu"
            name="Salary"
            action="hr.open_view_employee_list_my"
            parent="payroll_menu_root"
            sequence="0"
    />
</odoo>
